<Window x:Class="WPFBookstore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBookstore"
        mc:Ignorable="d"
        Title="BookstoreManager" MinHeight ="450" MinWidth ="820" Height="462" Width="820">


    <Border Padding="10" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">


        <!-- Overall window grid -->
        <Grid>


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <!-- Scrollable list -->
                <ColumnDefinition Width="2*" />
                <!-- Buttons -->
            </Grid.ColumnDefinitions>


            <!-- Scrollable list -->
            <Grid Grid.ColumnSpan="2" Margin="0,0,-0.4,0" Height="400" VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29*"/>
                    <RowDefinition Height="171*"/>
                </Grid.RowDefinitions>


                <Label x:Name="DataContextTitle" FontSize="18px" Margin="19,46,0,315" FontFamily="Stencil" Width="728" HorizontalAlignment="Left" Grid.RowSpan="2"/>
                <ListBox x:Name="DataContextContainer" SelectionChanged="DataContextContainer_SelectionChanged" VerticalAlignment="Top" Margin="10,28.4,10,0" MinWidth="200" MinHeight="150" Height="171" Grid.Row="1"/>

            </Grid>




            <!-- Buttons stack panel-->
            <Grid Height="138" Margin="0,252,-0.4,10" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="198*" />
                    <ColumnDefinition Width="199*" />
                </Grid.ColumnDefinitions>

                <!-- First column -->


                <!-- Second column-->
                <Button x:Name="BooksButton" Click="BooksButton_Click" Margin="10,45,10,49" Content="Books" />
                <Button x:Name="InvoicesButton" Click="InvoicesButton_Click" Margin="10,93,10,2" Content="Invoices" />

                <Button x:Name="AddButton" Click="AddButton_Click" Margin="4,45,215.6,68" Content="Add" Grid.Column="1" />
                <Button x:Name="EditButton" Click="EditButton_Click" Margin="0,113,215.6,0" Content="Edit" HorizontalAlignment="Right" Width="178" Grid.Column="1" />
                <Button x:Name="SellBookButton" Click="SellBookButton_Click" Margin="0,79,215.6,34" Content="Sell Book" HorizontalAlignment="Right" Width="178" Grid.Column="1" />

                <Button x:Name="RemoveButton" Click="RemoveButton_Click" Margin="204,112,13.6,1" Content="Remove" Grid.Column="1" />
                <Button x:Name="RemoveAllButton" Click="RemoveAllButton_Click" Margin="204,45,13.6,68" Grid.Column="1" Content="Remove All" />
                <Button x:Name="ReturnBookButton" Click="ReturnBookButton_Click" Margin="204,79,13.6,34" Content="Return Book" Grid.Column="1" />
                <TextBlock Text="Bookstore Lists" Margin="10,20,0,0" HorizontalAlignment="Left" Width="382" VerticalAlignment="Top" Height="16" FontFamily="Stencil" FontSize="14" />
                <StackPanel HorizontalAlignment="Left" Height="120" Margin="1,26,0,-8" VerticalAlignment="Top" Width="362" Grid.Column="1"/>
                <TextBlock x:Name="ControlsText" Text="Managing Data" Margin="4,26,2.6,93" Grid.Column="1" FontFamily="Stencil" FontSize="14" TextWrapping="Wrap" />

            </Grid>

            <!-- Buttons for changing lists -->
            <!-- Control Buttons -->


            <!-- Control Buttons -->


            <Label Content="Bookstore" FontSize="36" FontFamily="Stencil" Margin="321,-14,246.6,361" Grid.ColumnSpan="2"/>
        </Grid>
    </Border>
</Window>
